{
  "name": "electron-messenger",
  "version": "1.0.0",
  "description": "Telegram-like messenger app",
  "main": "./dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc && parcel build src/renderer/index.html --public-url ./",
    "watch": "tsc -w",
    "dev": "concurrently \"npm run watch\" \"parcel src/renderer/index.html\" \"electron .\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "lucide-react": "^0.292.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "parcel-bundler": "^1.12.5",
    "sass": "^1.69.0",
    "typescript": "^5.3.0"
  }
}